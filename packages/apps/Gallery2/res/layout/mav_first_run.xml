<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.gallery3d.mav.FirstRunLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/mav_firstrun_text_margintop"
        android:layout_marginLeft="@dimen/mav_firstrun_text_marginleft" >

        <TextView
            android:id="@+id/textView1"
            style="@style/FirstRunTitleStyle" />

        <TextView
            android:id="@+id/textView2"
            style="@style/FirstRunTextStyle"
            android:layout_marginTop="12dp" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="12dp"
            android:src="@drawable/ic_mav_gesture_hand" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_firstrun_dismiss"
        style="@style/FirstRunButtonStyle"
        android:layout_gravity="bottom|right" 
        android:layout_marginBottom="@dimen/mav_firstrun_btn_marginbottom" 
        android:layout_marginRight="@dimen/mav_firstrun_btn_marginright"
        android:onClick="onFirstRunDismiss" />

</com.mediatek.gallery3d.mav.FirstRunLayout>