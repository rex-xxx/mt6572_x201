<com.mediatek.email.emailvip.activity.VipListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dip"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?android:attr/activatedBackgroundIndicator">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView android:id="@+id/contact_name"
                  android:textColor="@drawable/list_item_font_primary"
                  android:textSize="18sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="16dip"
                  android:singleLine="true"
                  android:ellipsize="end" />
        <TextView android:id="@+id/email_address"
                  android:textColor="@drawable/list_item_font_secondary"
                  android:textSize="14sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="16dip"
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:layout_marginTop="-4dip" />
    </LinearLayout>
    <QuickContactBadge
        android:id="@+id/contact_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="12dip"
        android:src="@drawable/ic_contact_picture"
        android:cropToPadding="true"
        android:scaleType="centerCrop" />
    <!-- Remove button -->
    <ImageView android:id="@+id/remove_vip"
        android:src="@drawable/ic_cancel_holo_light"
        android:background="@drawable/message_list_read_selector"
        android:layout_width="48dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:scaleType="center"
        android:layout_centerVertical="true"/>
</com.mediatek.email.emailvip.activity.VipListItem>
