<com.android.internal.policy.impl.keyguard.KeyguardVoiceUnlockView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zz_keyguard_voice_unlock_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_maxWidth="@dimen/keyguard_security_width"
    android:layout_maxHeight="@dimen/keyguard_security_height"
    android:contentDescription="@android:string/zz_keyguard_accessibility_voice_unlock">

    <include layout="@android:layout/keyguard_message_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
       android:id="@+id/keyguard_bouncer_frame"
       android:background="@*android:drawable/kg_bouncer_bg_white"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       >
       <RelativeLayout
           android:id="@+id/zz_voice_unlock_area_view"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_gravity="center_horizontal"
           >
           <ImageView
                android:id="@+id/zz_voiceLockMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/zz_ic_voice_unlock_microphone"
                    />
           <ImageView
                android:id="@+id/zz_voiceLockWave"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/zz_voiceLockCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/zz_voiceLockMic"
                android:layout_below="@id/zz_voiceLockMic"
                android:src="@drawable/zz_ic_voice_unlock_cancel"
               />
       </RelativeLayout>
    </FrameLayout>

    <include layout="@android:layout/keyguard_eca"
        android:id="@+id/keyguard_selector_fade_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal" />
</com.android.internal.policy.impl.keyguard.KeyguardVoiceUnlockView>
